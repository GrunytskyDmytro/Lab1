{{> header}}
<section id="main" class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-6 col-md-4 col-lg-3">
                <div class="list-group">
                    {{ListCities AllCities.Cities}}
                </div>
            </div>
            <div class="col-6 col-md-8 col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" id="Title">Погода в місті {{InfoCity.nameCity}}</h3>
                        <img src="http://openweathermap.org/img/wn/{{InfoCity.icon}}@2x.png">
                        <table class="table table-bordered">
                            <tr>
                                <th>Pressure</th>
                                <td id="pressure">{{InfoCity.pressure}}</td>
                            </tr>
                            <tr>
                                <th>Humidity</th>
                                <td id="humidity">{{InfoCity.humidity}}</td>
                            </tr>
                            <tr>
                                <th>Temperature</th>
                                <td id="temperature">{{InfoCity.temperature}} &deg;</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> footer}}


